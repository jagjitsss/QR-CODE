<%- include('../../layout/header.ejs') %>
<%- include('../../layout/nav.ejs') %>  
<style>
    /* .dataTable-wrapper.no-footer .dataTable-container {
        border-bottom: none;
        width: 1500px!important;
        overflow-x:auto;
    } */
</style>
<div id="layoutSidenav">
    <%- include('../../layout/sideBar.ejs') %>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Manage Checkpoints</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">Manage Checkpoints</li>
                </ol>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="card-header text-right">
                            <a href="add-checkpoint" class="btn btn-primary">View & Add Checkpoints</a>
                        </div>
                        <div class="card-body" style="overflow-x:auto;">
                            <table id="datatablesSimple">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Checkpoint No</th>
                                        <th>Driver Name</th>
                                        <!-- <th>QR Code</th>
                                       
                                        <th>Checkpoint Location</th> -->
                                        <th>City</th>
                                        <th>Location</th>
                                        <th>Total QR Codes</th>
                                        <th>Action</th>
                                        
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Checkpoint No</th>
                                        <th>Driver Name/ Vehicle</th>
                                        <!-- <th>QR Code</th>
                                       
                                        <th>Checkpoint Location</th> -->
                                        <th>City</th>
                                        <th>Location</th>
                                        <th>Total QR Codes</th>
                                        <th>Action</th>
                                        
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% for (var i = 0; i < checkPoints.length; i++) { %>
                                        <tr>
                                            <td><%= i + 1 %></td>
                                            <td><%= checkPoints[i].checkpoint_no %></td>
                                            <td><%= checkPoints[i].driver_name %>/<%= checkPoints[i].vehicle_number %></td>
                                            <!-- <td><img class="qr_img" src="<%= checkPoints[i].checkpoint_qr_code%>"></td>
                                          
                                            <td><%= checkPoints[i].checkpoint_location %></td> -->
                                            <td><%= checkPoints[i].city %></td>
                                            <td><%= checkPoints[i].location %></td>
                                            <td><%= checkPoints[i].check_qr_code %></td>
                                            <td>
                                                <!-- <a href="edit-checkpoint?id=<%= checkPoints[i].id %>" class="btn btn-primary">Edit</a> -->
                                                <a href="delete-checkpoint?id=<%= checkPoints[i].id %>"  onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger">Delete</a>

                                            </td>
                                        </tr>
                                      <% } %>  
                                    
                                   

                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
               </div>
        </main>
    </div>
</div>
<%- include('../../layout/footer.ejs') %>
