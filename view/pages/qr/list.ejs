<%- include('../../layout/header.ejs') %>
<%- include('../../layout/nav.ejs') %>  

<div id="layoutSidenav">
    <%- include('../../layout/sideBar.ejs') %>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Manage QR Code</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active">QR Codes</li>
                </ol>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="card-header text-right">
                            <a href="add-qr-code" class="btn btn-primary">Add QR Code</a>
                        </div>
                        <div class="card-body">
                            <table id="datatablesSimple">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>QR Code.</th>
                                        <th>Checkpoint No</th>
                                        <th>Location</th>
                                        <th>Details</th>
                                        <th>Action</th>
                                        
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>QR Code.</th>
                                        <th>Checkpoint No.</th>
                                        <th>Location</th>
                                        <th>Details</th>
                                        <th>Action</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% for (var i = 0; i < codes.length; i++) { %>
                                        <tr>
                                            <td>1</td>
                                            <td><img class="qr_img" src="<%= codes[i].qr_code%>"></td>
                                            <td><%= codes[i].checkpoint_no%>-<%= codes[i].checkpoint%></td>
                                            <td><%= codes[i].location%></td>
                                            <td>
                                                <%= codes[i].details%>
                                            </td>
                                            <td>
                                                <a href="<%= codes[i].qr_code%>" class="btn btn-warning" download>Download</a>
                                                <a href="edit-qr-code?id=<%= codes[i].id%>" class="btn btn-primary">Edit</a>
                                                <a href="delete-qr-code?id=<%= codes[i].id %>"  onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger">Delete</a>
                                            </td>
                                        </tr>
                                     <% } %>   
                                    

                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                </div>
        </main>
    </div>
</div>
<%- include('../../layout/footer.ejs') %>
