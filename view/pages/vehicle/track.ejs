<%- include('../../layout/header.ejs') %>
<%- include('../../layout/nav.ejs') %>  
<script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.18.1/moment.min.js"></script>

<div id="layoutSidenav">
    <%- include('../../layout/sideBar.ejs') %>
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid px-4">
                <h1 class="mt-4">Track User</h1>
                <ol class="breadcrumb mb-4">
                    <li class="breadcrumb-item"><a href="/users">Users</a></li>
                    <li class="breadcrumb-item active">Track User</li>
                </ol>
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="card-header text-right">
                            <input type="date" value="<%=date%>" id="date_f" class="form-control" onchange="getDate()">
                            <input type="hidden" id="vehicle_id" class="form-control" value="<%= vehicle_id%>">
                        </div>
                        <div class="card-body">
                            <table id="datatablesSimple">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Checkpoint</th>
                                        <th>Scan Date</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>#</th>
                                        <th>Checkpoint</th>
                                        <th>Scan Date</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    <% for (var i = 0; i < checkpointsData.length; i++) { %>
                                        <tr>
                                            <td><%= i + 1%></td>
                                            <td><%= checkpointsData[i].checkpoint_location%></td>
                                            <td><%= moment(checkpointsData[i].updated_on).format('DD MMMM, YYYY hh:mm A')%></td>
                                        </tr>
                                    <% } %>    
                                    

                                    
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
               </div>
        </main>
    </div>
</div>
<%- include('../../layout/footer.ejs') %>

<script>
   

    function getDate(){
      var date = $("#date_f").val();
      var id = $("#vehicle_id").val();
      window.location = "track-vehicle?id="+id+'&d='+date;
      console.log(date)
    }
</script>